<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.ucsb.cs.cs185.frickenhamster.food" >

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".FoodApplication"
        android:allowBackup="true"
        android:icon="@drawable/eatharmony_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".restaurants.RestaurantsActivity"
            android:label="@string/title_activity_restaurants"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".history.HistoryActivity"
            android:label="@string/title_activity_history"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".history.VisualizeActivity"
            android:label="@string/title_activity_visualize"
            android:parentActivityName=".history.HistoryActivity" >
        </activity>
    </application>

</manifest>
